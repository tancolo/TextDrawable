<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>-->

        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionModeBackground">@color/white</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBarStyle.TitleTextStyle</item>

    </style>

    <style name="MyTheme.ActionBarStyle" >
        <item name="android:titleTextStyle">@style/MyTheme.ActionBarStyle.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBarStyle.TitleTextStyle">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>
